<h1 class="text-center">Registration</h1>

<form class="text-center">
    <div class="form-group">
        <label for="idUsername">Username</label>
        <div class="input-group">
            <input type="text" class="form-control text-center" id="idUsername">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword6">Password</label>
        <input type="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpInline">
        <small id="passwordHelpInline" class="text-muted">
            Must be 8-20 characters long.
        </small>
    </div>
    <div class="form-group">
        <label for="inputPasswordConfirm">Confirm Password</label>
        <input type="password" id="inputPasswordConfirm" class="form-control" aria-describedby="passwordHelpInline">
    </div>
    <button class="btn btn-primary" type="submit">Register</button>
</form>