<h1 class="text-center">Log In</h1>

<form class="text-center">
    <div class="form-group">
        <label for="idUsername">Username</label>
        <div class="input-group">
            <input type="text" class="form-control text-center" id="idUsername">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword6">Password</label>
        <input type="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpInline">
    </div>
    <button class="btn btn-primary" type="submit">Log In</button>
    <p>No account ? <a asp-area="" asp-controller="Registration" asp-action="Index">Create a new account.</a></p>

</form>